{
  "name": "chargytransparenzsoftware",
  "version": "1.1.0",
  "description": "Chargy ist eine Transparenzsoftware für das Eichrecht in der Elektromobilität. Hiermit können Endkunden und E-Mobilitäts-Anbieter die Plausibilitäts und Validität von Ladevorgängen überprüfen.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "install-app-deps"
  },
  "repository": "https://github.com/OpenChargingCloud/ChargyDesktopApp",
  "keywords": [
    "Chargy",
    "Transparenzsoftware",
    "Transparenz",
    "Eichrecht",
    "Elektromobilität",
    "E-Mobilität",
    "E-Mobility",
    "Ladestationen",
    "charging stations",
    "PTB",
    "VDE"
  ],
  "author": "GraphDefined GmbH <achim.friedland@graphdefined.com>",
  "license": "AGPL-3.0-or-later",
  "homepage": "https://github.com/OpenChargingCloud/ChargyDesktopApp",
  "devDependencies": {
    "@types/chart.js": "^2.9.21",
    "@types/decompress": "^4.2.3",
    "@types/elliptic": "^6.4.12",
    "@types/leaflet": "^1.5.12",
    "@types/node": "^14.0.11",
    "electron": "^9.0.2",
    "electron-builder": "^22.7.0",
    "sass": "^1.26.8",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "asn1.js": "^5.3.0",
    "base32-decode": "^1.0.0",
    "chart.js": "^2.9.3",
    "decompress": "^4.2.1",
    "decompress-bzip2": "^4.0.0",
    "decompress-gz": "0.0.1",
    "electron-localshortcut": "^3.2.1",
    "elliptic": "^6.5.2",
    "file-type": "^14.6.0",
    "leaflet": "^1.6.0",
    "leaflet.awesome-markers": "^2.0.5",
    "moment": "^2.26.0",
    "safe-stable-stringify": "^1.1.1"
  },
  "build": {
    "appId": "cloud.charging.chargeit.chargy.desktop",
    "productName": "Chargy Transparenzsoftware chargeIT mobility Edition",
    "copyright": "Copyright © 2018-2020 GraphDefined GmbH",
    "extraFiles": [
      "documentation",
      "versions"
    ],
    "fileAssociations": [
      {
        "ext": "chargy",
        "description": "Charge Transparency File",
        "mimeType": "application/x-chargy",
        "role": "Viewer"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/icons/chargy.ico"
    },
    "nsis": {
      "perMachine": true,
      "installerIcon": "src/icons/chargy.ico",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true
    },
    "linux": {
      "target": [
        "deb"
      ],
      "icon": "src/icons/chargy_icon.png"
    },
    "mac": {
      "category": "public.app-category.business",
      "type": "distribution"
    }
  }
}
